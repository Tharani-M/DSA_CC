//Prob 1 : Write a program that takes an integer, then a string, then a char from the user and prints them in the screen.
#include <iostream>
using namespace std;
int main() {
    int num;
    string str;
    char ch;
    cout << "Enter a number \n";
    cin >> num;
    cout <<"Enter a string \n";
    cin>>str;
    cout<<"Enter a char\n";
    cin>>ch;
    cout << num <<endl;
    cout << str <<endl;
    cout << ch <<endl;
   return 0;
}

//Prob 2: Write a program to check whether a triangle can be formed with the given values for the angles.
//Note : If sum of angles is equal to 180, then triangle can be formed, else it can't be formed.
#include <iostream>
using namespace std;
int main() {
      int angle1,angle2,angle3;
      cout << "Enter 3 angles \n";
      cin >> angle1 >> angle2 >> angle3;
      if((angle1+angle2+angle3) == 180){
        cout<<"Triangle can be formed";
      }
     else{
        cout<<"Triangle cannot be formed";
    }
    return 0;
}

/* Prob 3:
Given mark of student, Print the Grade

Grade A if mark is greater than or equal to 90

Grade B if mark is greater than or equal to 80

Grade C if mark if greater than or equal to 60

Grade D if mark if greaer than or equal to 35

Fail if mark is lesser than 35 */ 
#include <iostream>
using namespace std;
int main() {
    int mark;
    cout << "Enter your mark \n";
    cin >> mark;
    // 1 >> angle2 >> angle3;
    if(mark >= 90){
        cout<<"Grade A";
    }
    else if(mark >= 80){
        cout<<"Grade B";
    }
    else if(mark >= 60){
        cout<<"Grade C";
    }
    else if(mark >= 35){
        cout<<"Grade D";
    }
    else{
        cout<<"Fail";
    }
return 0;
}

/* Prob4 : Write a program using switch case which takes a value and prints the respective Size. If size is 29 then its small
If size is 29 then its small

If size is 30 then its Medium

If size is 38 then its Large

If size is 42 then its XLarge

If size is not any of the above then Invalid.
*/
#include <iostream>
using namespace std;
int main() {
    int size;
    cout << "Enter your size \n";
    cin >> size;
    // 1 >> angle2 >> angle3;
    switch (size){
    case (29):
        cout<<"Small";
        break;
     case (30):
        cout<<"Medium";
        break;
     case (38):
        cout<<"Large";
        break;
     case (42):
        cout<<"XLarge";
        break;
     default:
        cout<<"Invalid size";break;  
    }
  return 0;
}

//Task 2:
// Prob 1 : Write a program which takes two values x and y. Prints x for y number of times.
#include <iostream>
using namespace std;
int main() {
    int val1,val2;
    cout << "Enter your 2 values \n";
    cin >> val1>>val2;
    for(int i=1;i<=val2;i++){
        cout<<val1;
    }
    return 0;
}

//Prob 2 : Write a program to take x and print multiples of x till 1000.
#include <iostream>
using namespace std;
int main() {
    int x;
    cout << "Enter x \n";
    cin >> x;
    for(int i=x;i<=1000;i = i+x){
        cout<< i << endl;
    }
     return 0;
}

//Prob 3: Write a program to get firstName and lastName and n as input and print fullName that is firstName+lastName for n times.
#include <iostream>
using namespace std;
int main() {
    int times;
    string fname,lname;
    cout << "Enter first and last names and number of times should be printed \n";
    cin >> fname>>lname>>times;
    for(int i=1;i<=times;i++){
        cout<< fname+lname<< endl;
    }
    return 0;
}

//Task 3:
//prob 1: 
/*    Input:

n = 4

Expected output:

****

***

**

*            */
Answer 1:

#include <iostream>
using namespace std;

int main() 
{
    int n;
    // cout<<"Enter n";
    cin>>n;
    for(int i=n;i>=1;i--){
      for(int j=1;j<=i;j++){
        cout<<"*";
      }
      cout<<endl;
    }
    return 0;
}

Answer 2:
#include <iostream>
using namespace std;

int main() 
{
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
      for(int j=1;j<=n-i+1;j++){
        cout<<"*";
      }
      cout<<endl;
    }
    return 0;
}

 // Note : Same to print  like, change to j instead '*' in line cout<<"*";
4321
432
43
4

/* Prob 2:
n = 4

Expected output:

*

**

***

****        */

#include <iostream>
using namespace std;

int main() 
{
    int n;
    // cout<<"Enter n";
    cin>>n;
    for(int i=1;i<=n;i++){
      for(int j=1;j<=i;j++){
        cout<<'*';
      }
      cout<<endl;
    }
    return 0;
}

// Prob 3:
/* Input:

n= 4

1 

2 2 

3 3 3 

4 4 4 4   */

#include <iostream>
using namespace std;

int main() 
{
    int n;
    // cout<<"Enter n";
    cin>>n;
    for(int i=1;i<=n;i++){
      for(int j=1;j<=i;j++){
        cout<<i;
      }
      cout<<endl;
    }
    return 0;
}

//Task - 4
// Prob 1 : Write a program that gets n as input and print the number of digits in the number
#include <iostream>
using namespace std;

int main() 
{
    int c,n;
    cin>>n;
    while(n>0){
      c++;
      n = n/10;
    }
    cout<<c;
    return 0;
}

//Prob 2: Write a program that gets n as input and print the reverse of the number
#include <iostream>
using namespace std;

int main() 
{
    int last,n,sum =0;
    cin>>n;
    while(n>0){
      last = n % 10;
      sum = (10*sum)+last; 
      n = n/10;
    }
    cout<<sum;
    return 0;
}
