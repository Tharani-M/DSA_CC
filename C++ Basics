//Task - 4
// Prob 1 : Write a program that gets n as input and print the number of digits in the number
#include <iostream>
using namespace std;

int main() 
{
    int c,n;
    cin>>n;
    while(n>0){
      c++;
      n = n/10;
    }
    cout<<c;
    return 0;
}

//Prob 2: Write a program that gets n as input and print the reverse of the number
#include <iostream>
using namespace std;

int main() 
{
    int last,n,sum =0;
    cin>>n;
    while(n>0){
      last = n % 10;
      sum = (10*sum)+last; 
      n = n/10;
    }
    cout<<sum;
    return 0;
}
//Task 4
//Prob 3:Write a program that gets n as input and print the factorial of a number(n!).

#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() 
{
  int n,fact=1;
   cin>>n;
   while(n>1){
     fact = fact * n;
     n--;
   }
   cout<<fact;
}

//Prob 4: Write a program that gets n as input and print all the prime numbers till that number.
#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() 
{
  int n,flag=0;
   cin>>n;
   
  if(n ==0 || n == 1){
    cout<<"Not a prime number";
  }
  for(int j=2;j<n;j++){
     flag = 0;
     for(int i=2;i<j;i++){      
      if(j%i == 0 ){
         flag = 1;
         break;
      }
   }
   if(flag == 0){
     cout<<j<<endl;
   }
  }
   return 0;
}

